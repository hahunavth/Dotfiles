<schemalist gettext-domain="gnome-shell-extensions">
  <schema id="org.gnome.shell.extensions.taskwarrior-integration"
      path="/org/gnome/shell/extensions/taskwarrior-integration/">
    <key name="toggle-menu" type="as">
      <default><![CDATA[['<Ctrl>F8']]]></default>
      <summary>Toggle the menu</summary>
      <description>Key to toggle the taskwarrior menu</description>
    </key>
    <key name="max-task-description-line-length" type="i">
      <default>120</default>
    </key>
    <key name="max-task-tags-line-length" type="i">
      <default>80</default>
    </key>
    <key name="filter" type="s">
      <default>''</default>
      <summary>Filter for task list</summary>
      <description>Extra filter to apply to taskwarrior export cmd</description>
    </key>
  </schema>
</schemalist>
